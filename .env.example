# Client-side WebSocket for Atlas log streaming
NEXT_PUBLIC_WS_URL=wss://your-backend.example/ws/logs

# GitHub integration (server-side)
GITHUB_TOKEN=ghp_your_token_here
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo
GITHUB_BASE_BRANCH=main

# GitHub OAuth (for user authorization in the browser)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# JIRA integration (server-side)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=ENG

# Optional: default Jira issue key to sync comments with
NEXT_PUBLIC_DEFAULT_JIRA_ISSUE_KEY=ENG-123